<div class="container">
  <div class="row">
    <div class="twelve columns">
      <nav>
        <form class="" method="post" style="margin-bottom: 1.0rem;">
          <input formaction="/favorite/quotes" class="button-primary" id="btn_favorite_view" type="submit" value="Favorites">
          <input formaction="/users/profile_home" class="button-primary" type="submit" value="Profile">
          <input formaction="/users/logout" class="button-primary" id="btn_login" type="submit" value="Logout">
          <br>
        </form>
        <form class="search_box" method="post" style="margin-bottom: 1.0rem;">
          <input formaction="/users/profile_search" class="" type="search" name="user_name" placeholder="Search for User" style="text-align:center;">
        </form>
        <!-- if there is a message -->
        <% if @message %>
            <!-- print that message -->
            <p class="text-center" id="warning-message"><strong><%= @message %></strong></p>
        <% end %>
      </nav>

      <div class="profile_image_container">
        <h3>Hello, <%= @user_name %>!</h3>
        <img id="profile_pic" src="<%= @image_base64 %>" alt="" />
      </div>
    </div>

    <div id="content">
      <h3>Favorite Quotes</h3>

      <article class="profile_quote">
        <ol class="favorite-list">
          <% @quotes.each do |quote| %>
            <% if quote.author != "" %>
                <li>
                    <%= quote.quote %> &#8212; <%= quote.author %>
                    <form class="" method="post" style="display: inline;"><input formaction="/favorite/quote-delete/<%= quote.id %>" id="btn-delete" type="submit" value="x"></form>
                </li>
            <% else %>
                <li>
                    <%= quote.quote %> &#8212; Unknown
                    <form class="" method="post" style="display: inline;"><input formaction="/favorite/quote-delete/<%= quote.id %>" id="btn-delete" type="submit" value="x"></form>
                </li>
            <% end %>
          <% end %>
        </ol>
      </article>

      <br>
      <br>
    </div>
  </div>
</div>
