<!-- link generation script -->
<script src="/js/apiCalls.js" charset="utf-8"></script>

<div class="container">
  <div class="row">
    <div class="twelve columns" id="login-column">
      <nav>
        <form class="" method="post" style="margin-bottom: 1.0rem;">
          <input formaction="/favorite/quotes" class="button-primary" id="btn_favorite_view" type="submit" value="Favorites">
          <input formaction="/users/profile_home" class="button-primary" type="submit" value="Profile">
          <input formaction="/users/logout" class="button-primary" id="btn_login" type="submit" value="Logout">
          <br>
        </form>
        <form class="search_box" method="post" style="margin-bottom: 1.0rem;">
          <input formaction="/users/profile_search" class="button-primary" type="search" name="user_name" placeholder="Search for User" style="text-align:center;">
        </form>
        <!-- if there is a message -->
        <% if @message %>
            <!-- print that message -->
            <p class="text-center" id="warning-message"><strong><%= @message %></strong></p>
        <% end %>
      </nav>
      <div class="profile_image_container">
        <h3>Hello, <%= @user_name %>!
          <p style="display: inline; font-family: Raleway, Arial, sans-serif;
              font-size: 10px; font-weight: normal;"><a href="/users/edit_profile">Edit Profile</a></p>
        </h3>
        <img id="profile_pic" src="<%= @image_base64 %>" alt="" />

        </div>

        <div id="content">
          <article class="profile_quote">
          </article>
          <form class="" action="/favorite/quote" method="post">
            <input id="setQuote" type="hidden" name="quote" value="">
            <input id="setAuthor" type="hidden" name="author" value="">
            <input id="btn_favorite" class="button-primary" type="submit" name="favorite_quote" value="Favorite">
          </form>
        </div>
        <div class="profile_image_row">

        </div>
<br>
<br>
    </div>
  </div>
</div>
