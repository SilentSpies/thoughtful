<div class="col-xs-12">
  <div class="profile_image_container">
    <h3><%= @user_name %>'s Favorites</h3>
    <img id="profile_pic" src="<%= @image_base64 %>" alt="" />
  </div>
</div>

<div id="content">
  <h3>Favorite Quotes</h3>

  <article class="profile_quote">
    <ul>
      <% @quotes.each do |quote| %>
        <li><%= quote.quote %> --- <%= quote.author %></li>
        <!-- <td><a class="button-link" href='/items/update/<%= quote.id %>'>Update</a></td>
        <td><a class="button-link" href='/items/destroy/<%= quote.id %>'>Destroy</a></td> -->
      <% end %>
    </ul>
  </article>

  <br>
  <br>
  <form action="/users/logout" method="post">
    <input class="button-primary" id="btn_login" type="submit" value="Logout">
  </form>
  <form action="/users/profile_home" method="post">
    <input class="button-primary" type="submit" value="Profile Home">
  </form>
  <form action="/users/profile_search" method="post">
    <input class="button-primary" type="search" value="Username">
  </form>
</div>
